<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/parentsdashboardwholecontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimaryDark"
            android:elevation="2dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin"
            android:gravity="center">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/toolbarinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/profilecontainer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_alignParentLeft="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileimage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/addfeeds"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_alignParentLeft="true"/>

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/titlecontainer"
                    android:layout_width="wrap_content"
                    app:layout_widthPercent="70%"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/profilecontainer"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/projecttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/app_name"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>

                </android.support.percent.PercentRelativeLayout>

            </android.support.percent.PercentRelativeLayout>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/attendancepagename"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Notifications"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_below="@+id/toolbar"
            android:background="@color/white"
            android:textColor="@color/colorAccent"/>

        <ListView
            android:id="@+id/notificationslistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/attendancepagename"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:divider="@null">
        </ListView>

        <TextView
            android:id="@+id/emptycriteriamsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Notifications"
            android:layout_below="@+id/attendancepagename"
            android:textColor="@color/colorAccent"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="invisible"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>