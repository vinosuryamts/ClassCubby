<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dahboarditemcontainer">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/dashboarditemimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/dashboarditemimage"
            android:layout_alignTop="@id/dashboarditemimage"
            android:layout_alignRight="@id/dashboarditemimage"
            android:layout_alignBottom="@id/dashboarditemimage"
            android:textSize="13sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </FrameLayout>


</RelativeLayout>
