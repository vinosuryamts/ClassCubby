<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/mainpageoverallcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimaryDark"
            android:elevation="2dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin"
            android:gravity="center">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/toolbarinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/profilecontainer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_alignParentLeft="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileimage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/addfeeds"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_alignParentLeft="true"/>

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/titlecontainer"
                    android:layout_width="wrap_content"
                    app:layout_widthPercent="70%"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/profilecontainer"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/projecttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/app_name"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/messagecontainer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/titlecontainer"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/messageimage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="@string/notification"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:paddingTop="14dp"
                        android:textAlignment="center"
                        android:layout_marginRight="20dp"
                        android:rotation="20"
                        android:layout_alignParentLeft="true"/>


                </android.support.percent.PercentRelativeLayout>

                <TextView
                    android:id="@+id/counttext"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:background="@drawable/notificationcircle"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="9dp"
                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_alignTop="@+id/button1"
                    android:layout_alignRight="@+id/button1"/>

            </android.support.percent.PercentRelativeLayout>

        </android.support.v7.widget.Toolbar>

        <View
            android:id="@+id/sepline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/toolbar"
            android:elevation="2dp"/>

        <uk.co.yellowrays.collegeinfo.classcubby.customtabadapter.CustomViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sepline"
            android:layout_above="@+id/appbarcontainer"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarcontainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/tabs"
                android:background="#EEEEEE" />

            <uk.co.yellowrays.collegeinfo.classcubby.FontManager.CustomTabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabMode="fixed"
                android:background="@color/colorPrimaryDark"
                app:tabTextColor="#E0E0E0"
                android:layout_gravity="center"
                app:tabSelectedTextColor="@color/textColorPrimary"
                app:tabIndicatorHeight="0dp"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabGravity="fill"/>
        </android.support.design.widget.AppBarLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.design.widget.CoordinatorLayout>