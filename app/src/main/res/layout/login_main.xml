<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginscreenmaincontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/loginpagecontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/languagesupportcontainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:gravity="center">

            <TextView
                android:id="@+id/lanuagetext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="English"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/lightgrey"/>

            <ImageView
                android:id="@+id/downdropdown"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/lanuagetext"
                android:foregroundGravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/downarrow"></ImageView>
        </RelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/loginscreenlogocontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="30%"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/logocontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40dp">
                <ImageView
                    android:id="@+id/loginlogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/splashlogo"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/appnamevalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_below="@+id/logocontainer"
                android:textColor="@color/textColorPrimary"
                android:textSize="20dp"/>

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/logindetailscontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent='39%'
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_below="@+id/loginscreenlogocontainer">

            <EditText
                android:id="@+id/usernameedittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:maxLength="150"
                android:singleLine="true"
                android:padding="15dp"
                android:layout_marginTop="25dp"
                android:textSize="12dp"
                android:textColor="@color/lightgrey"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:hint="Email or Phone number"
                android:textColorHint="@color/lightgrey"
                android:background="@drawable/edittext"/>

            <EditText
                android:id="@+id/passwordedittext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:maxLength="25"
                android:singleLine="true"
                android:layout_below="@+id/usernameedittext"
                android:ems="10"
                android:padding="15dp"
                android:textSize="12dp"
                android:textColor="@color/lightgrey"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColorHint="@color/lightgrey"
                android:background="@drawable/edittext"/>

            <TextView
                android:id="@+id/showorhidetext"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="Show"
                android:visibility="invisible"
                android:layout_alignTop="@+id/passwordedittext"
                android:layout_alignParentRight="true"/>
            <Button
                android:id="@+id/signinbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/passwordedittext"
                android:ems="10"
                android:padding="15dp"
                android:textSize="12dp"
                android:textColor="@color/dimblue"
                android:textStyle="bold"
                android:text="Log In"
                android:textAllCaps="false"
                android:background="@drawable/signinbutton"/>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/loadingcontainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/signinbutton"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="invisible">

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AVLoadingIndicatorView"
                    android:visibility="visible"
                    app:indicatorName="BallPulseIndicator"
                    app:indicatorColor="@color/textColorPrimary" />

            </android.support.percent.PercentRelativeLayout>

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/forgotcontainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/logindetailscontainer"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/forgottext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Forgot your login details? Get help Signing in."
                android:textColor="@color/lightgrey"
                android:textSize="11dp" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/orcontainer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/forgotcontainer"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:padding="5dp"
            android:gravity="center_horizontal">

            <View
                android:id="@+id/leftline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                app:layout_widthPercent="37%"
                android:layout_marginTop="7dp"
                android:background="@color/lightgrey" />

            <TextView
                android:id="@+id/ortext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:text="OR"
                android:textSize="12dp"
                android:textColor="@color/lightgrey"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/leftline"/>
            <View
                android:id="@+id/rightline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                app:layout_widthPercent="37%"
                android:layout_toRightOf="@+id/ortext"
                android:layout_marginTop="7dp"
                android:background="@color/lightgrey" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/democontainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/orcontainer"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <Button
                android:id="@+id/demobutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:padding="15dp"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Copyright (c) 2017, Yellowrays reserved"
                android:textAllCaps="false"
                android:visibility="invisible"
                android:background="@drawable/enabledsigninbutton"/>


            <android.support.percent.PercentRelativeLayout
                android:id="@+id/previousloggedincontainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:visibility="invisible"
                android:background="@drawable/enabledsigninbutton">

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/userimagecontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/previoususerimage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:foregroundGravity="center"
                        android:layout_marginTop="1dp"/>
                </android.support.percent.PercentRelativeLayout>

                <TextView
                    android:id="@+id/previoususernametext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:text="Nallathambi Pasupatheeswaen"
                    android:paddingLeft="5dp"
                    android:gravity="left|center_vertical"
                    android:layout_toRightOf="@+id/userimagecontainer"/>

            </android.support.percent.PercentRelativeLayout>

            <!--<Button
                android:id="@+id/previousloogedin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:padding="15dp"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:visibility="invisible"
                android:background="@drawable/enabledsigninbutton"/> -->

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/signupcontainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgrey" />

            <TextView
                android:id="@+id/signuptext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Don't have an account? Sign up."
                android:textColor="@color/lightgrey"
                android:textSize="11dp" />

        </android.support.percent.PercentRelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/radialgradient"
        android:visibility="gone">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/signupsupporttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/signupsupport"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/white"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                app:backgroundTint="@color/white"
                android:src="@drawable/closepopup"/>

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/forgotpasswordlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/radialgradient"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/forgotpasswordfirstpage"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/forgottitlecontainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/forgottitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Forgot Password?"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:id="@+id/circularimagecontainer"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/forgottitlecontainer"
                android:gravity="center"
                android:visibility="invisible">

                <RelativeLayout
                    android:id="@+id/innercirclecontianer"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:gravity="center"
                    android:background="@drawable/circularborder">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logoimage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/splashlogo">

                    </de.hdodenhof.circleimageview.CircleImageView>

                </RelativeLayout>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/enteremailtextcontianer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/circularimagecontainer"
                android:gravity="center">

                <TextView
                    android:id="@+id/enteremailtext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/forgotpasswordsupport"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="invisible"/>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/emailcontainer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/enteremailtextcontianer"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:visibility="invisible">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/usernameedittextcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:id="@+id/emailedittext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:textSize="12dp"
                        android:hint="Email"
                        android:textStyle="bold"
                        android:backgroundTint="@color/white"
                        android:textColorHint="@color/white"/>

                </android.support.design.widget.TextInputLayout>


            </android.support.percent.PercentRelativeLayout>

            <RelativeLayout
                android:id="@+id/nextcontainer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/emailcontainer"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="center">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/nextarrow"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        app:backgroundTint="@color/white"
                        android:src="@drawable/nextarrow"
                        android:visibility="invisible"/>

                    <android.support.percent.PercentRelativeLayout
                        android:id="@+id/nextloadingcontainer"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:visibility="invisible">

                        <com.wang.avi.AVLoadingIndicatorView
                            android:id="@+id/nextload"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            style="@style/AVLoadingIndicatorView"
                            android:visibility="visible"
                            app:indicatorName="BallPulseIndicator"
                            app:indicatorColor="@color/white" />

                    </android.support.percent.PercentRelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/haveactivationcontainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/nextcontainer"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/alreadyhaveactivationbutton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Already have an activation code?"
                    android:textAllCaps="false"
                    android:background="@drawable/activateemailbutton"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                app:backgroundTint="@color/white"
                android:src="@drawable/closepopup"/>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forgotpasswordsecondpage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/confirmationtitlecontainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/confirmationtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Confirmation !"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAllCaps="true"
                android:visibility="invisible"/>

        </RelativeLayout>


        <android.support.percent.PercentRelativeLayout
            android:id="@+id/successimagecontainer"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/confirmationtitlecontainer"
            android:gravity="center"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/successimageinnercontainer"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/successimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </de.hdodenhof.circleimageview.CircleImageView>

            </RelativeLayout>

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/successmessagecontainer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/successimagecontainer"
            android:gravity="center">

            <TextView
                android:id="@+id/successmessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/emailsentsuccessmesage"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="invisible"/>

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/emailidentercontainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/successmessagecontainer"
            android:layout_marginTop="10dp"
            android:visibility="invisible">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/verificationemailedittextcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/verificationemailedittext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:textSize="12dp"
                    android:hint="Email"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"/>

            </android.support.design.widget.TextInputLayout>


        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/verificationinputfieldoverallcontainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/emailidentercontainer"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:visibility="invisible"
            android:gravity="center">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/firstverificationinputcontainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_widthPercent="20%"
                android:gravity="center">

                <EditText
                    android:id="@+id/firstverificationinput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"/>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
            android:id="@+id/secondverificationinputcontainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="20%"
            android:layout_toRightOf="@+id/firstverificationinputcontainer"
            android:gravity="center">

                <EditText
                    android:id="@+id/secondverificationinput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"/>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/thirdverificationinputcontainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_widthPercent="20%"
                android:layout_toRightOf="@+id/secondverificationinputcontainer"
                android:gravity="center">

                <EditText
                    android:id="@+id/thirdverificationinput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"/>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/fourthverificationinputcontainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_widthPercent="20%"
                android:layout_toRightOf="@+id/thirdverificationinputcontainer"
                android:gravity="center">

                <EditText
                    android:id="@+id/fourthverificationinput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:inputType="number"/>

            </android.support.percent.PercentRelativeLayout>

        </android.support.percent.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/secondpagenextcontainer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/verificationinputfieldoverallcontainer"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/secondpagenextarrow"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    app:backgroundTint="@color/white"
                    android:src="@drawable/nextarrow"
                    android:visibility="invisible"/>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/secondnextloadingcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:visibility="invisible">

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/secondnextload"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        style="@style/AVLoadingIndicatorView"
                        android:visibility="visible"
                        app:indicatorName="BallPulseIndicator"
                        app:indicatorColor="@color/white" />

                </android.support.percent.PercentRelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forgotpasswordthirdpage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/changepasswordpagecontainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/changetitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Change Password"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAllCaps="true"
                android:visibility="invisible"/>

        </RelativeLayout>


        <android.support.percent.PercentRelativeLayout
            android:id="@+id/changeimagecontainer"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/changepasswordpagecontainer"
            android:gravity="center"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/changesuccessimageinnercontainer"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/changesuccessimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </de.hdodenhof.circleimageview.CircleImageView>

            </RelativeLayout>

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/changesuccessmessagecontainer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/changeimagecontainer"
            android:gravity="center">

            <TextView
                android:id="@+id/changesuccessmessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/changepasswordmessage"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="invisible"/>

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/changepasswordoverallcontainer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/changesuccessmessagecontainer"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="invisible">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordedittextcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/changepasswordedittext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:textSize="12dp"
                    android:hint="Password"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/passwordshoworhidetext"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Show"
                android:visibility="invisible"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/passwordedittextcontainer"
                android:layout_alignParentRight="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/retypepasswordedittextcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:theme="@style/TextLabel"
                android:layout_below="@+id/passwordedittextcontainer">

                <EditText
                    android:id="@+id/retypechangepasswordedittext"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:textSize="12dp"
                    android:hint="Re-Type Password"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"/>

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/retypepasswordshoworhidetext"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Show"
                android:visibility="invisible"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/retypepasswordedittextcontainer"
                android:layout_alignParentRight="true"/>

        </android.support.percent.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/thirdpagenextcontainer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/changepasswordoverallcontainer"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/thirdpagenextarrow"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    app:backgroundTint="@color/white"
                    android:src="@drawable/nextarrow"
                    android:visibility="invisible"/>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/thirdnextloadingcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:visibility="invisible">

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/thirdnextload"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        style="@style/AVLoadingIndicatorView"
                        android:visibility="visible"
                        app:indicatorName="BallPulseIndicator"
                        app:indicatorColor="@color/white" />

                </android.support.percent.PercentRelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/forgotpasswordfourthpage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/passwordchangesuccesscontainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/changesuccesstitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Success !"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAllCaps="true"
                android:visibility="invisible"/>

        </RelativeLayout>


        <android.support.percent.PercentRelativeLayout
            android:id="@+id/changeimagesuccesscontainer"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/passwordchangesuccesscontainer"
            android:gravity="center"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/passsuccessimageinnercontainer"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/passsuccessimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </de.hdodenhof.circleimageview.CircleImageView>

            </RelativeLayout>

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/passchangesuccessmessagecontainer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/changeimagesuccesscontainer"
            android:gravity="center">

            <TextView
                android:id="@+id/passchangesuccessmessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/passsuccess"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="invisible"/>

        </android.support.percent.PercentRelativeLayout>


        <Button
            android:id="@+id/gotologinbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:padding="15dp"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Navigate To Login Screen"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/passchangesuccessmessagecontainer"
            android:background="@drawable/activateemailbutton"/>

    </RelativeLayout>

    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>
