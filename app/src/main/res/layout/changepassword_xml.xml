<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/parentsuserinformationwholecontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimaryDark"
            android:elevation="2dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_collapseMode="pin"
            android:gravity="center">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/toolbarinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/profilecontainer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_alignParentLeft="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileimage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/addfeeds"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_alignParentLeft="true"/>

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/titlecontainer"
                    android:layout_width="wrap_content"
                    app:layout_widthPercent="70%"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/profilecontainer"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/projecttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/app_name"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"/>

                </android.support.percent.PercentRelativeLayout>

            </android.support.percent.PercentRelativeLayout>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/cardcontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/filterspinnervaluescontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/passwordtext"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:layout_widthPercent="30%"
                    android:gravity="center_vertical"
                    android:text="New Password:     "
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>

                <EditText
                    android:id="@+id/newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/passwordtext"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/buttoncycler1"
                    android:textSize="11dp"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:gravity="top"></EditText>

            </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:id="@+id/retypefilterspinnervaluescontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/filterspinnervaluescontainer"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/retypepasswordtext"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="Re-Type Password:     "
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:textStyle="bold"></TextView>
s
                <EditText
                    android:id="@+id/retypenewpassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/retypepasswordtext"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:inputType="textPassword"
                    android:paddingBottom="10dp"
                    android:textColor="@color/grey"
                    android:background="@drawable/buttoncycler1"
                    android:textSize="11dp"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:gravity="top">
                </EditText>

            </android.support.percent.PercentRelativeLayout>


            <android.support.percent.PercentRelativeLayout
                android:id="@+id/thirdrowfiltercontainer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/generatecontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="45%"
                    android:gravity="center">

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="Submit"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/grey"/>

                </android.support.percent.PercentRelativeLayout>


            </android.support.percent.PercentRelativeLayout>

        </RelativeLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>