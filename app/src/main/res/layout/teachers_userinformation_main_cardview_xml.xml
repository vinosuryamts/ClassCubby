<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    app:cardCornerRadius="1dp"
    android:background="@color/white">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/newlightgrey">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/namecontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/overallpopupcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:gravity="center">

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/changepasswordcontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:layout_widthPercent="30%"
                    android:paddingTop="90dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/changepasswordoverallcontainer"
                        android:layout_width="160dp"
                        android:layout_height="30dp">

                        <RelativeLayout
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:background="@drawable/changepassword"
                            android:elevation="10dp"
                            android:layout_marginLeft="2dp">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/changepassword"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:text="Change Password"
                            android:textSize="10dp"
                            android:paddingLeft="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/userinfocolor"
                            android:background="@drawable/buttoncycler"
                            android:gravity="center"/>

                    </RelativeLayout>

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/popupimagecontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:background="@drawable/circle1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/changepasswordcontainer"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userimagevalue"
                        android:layout_width="115dp"
                        android:layout_height="115dp" />

                </android.support.percent.PercentRelativeLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/logoutcontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:layout_widthPercent="302%"
                    android:paddingTop="90dp"
                    android:layout_toRightOf="@+id/popupimagecontainer"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/logoutoverallcontainer"
                        android:layout_width="120dp"
                        android:layout_height="30dp">

                        <RelativeLayout
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:background="@drawable/logouticon"
                            android:elevation="10dp"
                            android:layout_marginLeft="8dp">
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/logout"
                            android:layout_width="110dp"
                            android:layout_height="30dp"
                            android:text="Logout"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:paddingLeft="5dp"
                            android:textColor="@color/userinfocolor"
                            android:background="@drawable/buttoncycler"
                            android:gravity="center"/>

                    </RelativeLayout>

                </android.support.percent.PercentRelativeLayout>

            </android.support.percent.PercentRelativeLayout>

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/overallpopupcontainer"
                android:textStyle="bold"
                android:textColor="@color/lightrose"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="center"></TextView>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_below="@+id/username"
                android:textSize="11dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="1"
                android:gravity="center"></TextView>

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>
