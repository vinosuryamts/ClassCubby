<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/teachersleavetrackercontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarcontainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:gravity="center">

            <android.support.design.widget.TabLayout
                android:id="@+id/leavetabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabMode="fixed"
                android:background="@color/colorPrimaryDark"
                app:tabTextColor="#E0E0E0"
                android:layout_gravity="center"
                app:tabSelectedTextColor="@color/textColorPrimary"
                app:tabIndicatorHeight="0dp"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabGravity="fill"/>

        </android.support.design.widget.AppBarLayout>

        <uk.co.yellowrays.collegeinfo.classcubby.TeachersAdapter.LeaveTracker.adapter.CustomViewPager
            android:id="@+id/leaveviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbarcontainer"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"  />


    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>
